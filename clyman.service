[Unit]
Description=CLyman Object Tracking Service

[Service]
Environment=CONSUL_AGENT_ADDR=localhost:8500
Environment=CLYMAN_HOST=localhost
Environment=CLYMAN_PORT=5556
User=clyman
Group=clyman
ExecStart=/usr/local/bin/clyman -consul-addr=${CONSUL_AGENT_ADDR} -ip=${CLYMAN_HOST} -port=${CLYMAN_PORT} -log-conf=/etc/clyman/log4cpp.properties
ExecStop=python /usr/local/bin/stop_clyman.py ${CLYMAN_HOST} ${CLYMAN_PORT}

[Install]
WantedBy=multi-user.target
