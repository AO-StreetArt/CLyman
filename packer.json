{
  "builders": [
    {
      "type": "docker",
      "image": "ubuntu:18.04",
      "commit": "true",
      "changes": [
        "ENTRYPOINT [\"clyman\"]"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "apt-get update && apt-get install sudo"
      ],
      "only": ["docker"]
    },
    {
      "type": "shell",
      "script": "scripts/linux/container_install.sh"
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "aostreetart/clyman",
        "tag": "v2"
      }
    ]
  ]
}
